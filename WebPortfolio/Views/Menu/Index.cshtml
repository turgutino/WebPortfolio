@using WebPortfolio.Models.Entities
@using WebPortfolio.Models.Data

@model List<Menu>
@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Kisisel veb sitesi</title>
    <link rel="stylesheet" href="/css/style.css">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter&display=swap" rel="stylesheet">


</head>
<body>
    <div class="center">
        @foreach(var item4 in Model){
            <div class="avatar">
                <img src="@item4.ProfilPhoto" alt="Profil photo">
            </div>
        }
        
        <div class="content">
            @foreach(var item in Model){
                <h1>@item.Name</h1>
                <h2>@item.Position</h2>
                <p>@item.Description</p>
                <h3>@item.Contact</h3>
            }
            
        </div>
        
        @Html.Partial("index1", ViewBag.Icons as List<WebPortfolio.Models.Entities.Icon>)

        
    </div>
</body>

