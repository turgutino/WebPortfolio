@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Verification Code</title>
    <link rel="stylesheet" href="/css/style2.css" />
</head>
<body>
    <div class="login-wrapper">
        <div class="login-box">
            <h2>Verification Code</h2>
            <p>We've sent a verification code to your email. Enter it below:</p>

            <form asp-action="VerifyResetCode" method="post">
                <input type="text" name="code" placeholder="6-digit code" maxlength="6" required style="text-align:center; font-size:18px;" />
                <button type="submit">Verify</button>

                @if (!ViewData.ModelState.IsValid)
                {
                    <div style="color:red;">
                        @foreach (var err in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                        {
                            <p>@err.ErrorMessage</p>
                        }
                    </div>
                }
            </form>
        </div>
    </div>
</body>
</html>
